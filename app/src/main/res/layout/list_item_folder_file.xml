<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="72dp"
    android:elevation="4dp"
    android:id="@+id/entire_file_layout"
    android:layout_marginBottom="8dp">

    <ImageView
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:id="@+id/file_preview"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <biome.fresco.CustomTextViewLogo
        android:id="@+id/file_name"
        android:layout_alignTop="@+id/file_preview"
        android:layout_toRightOf="@+id/file_preview"
        android:text="Sample Folder/File name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/file_timestamp"
        android:text="Jun 06 at 3:00pm"
        android:layout_below="@+id/file_name"
        android:layout_toRightOf="@+id/file_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>