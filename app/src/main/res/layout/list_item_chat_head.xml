<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp">


    <RelativeLayout
        android:id="@+id/entire_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView


            android:id="@+id/chat_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            />


        <TextView
            android:textColor="@color/colorPrimary"
            android:id="@+id/chat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/chat_icon"
            android:layout_toRightOf="@+id/chat_icon"
            android:gravity="center_vertical"
            android:text="Sample Chat Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/last_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_name"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/chat_icon"
            android:maxLines="1"
            android:text="This is the last message of the conversation" />

        <TextView

            android:id="@+id/last_message_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last_message"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/chat_icon"
            android:text="11:21 PM" />

        <View
            android:layout_alignParentBottom="true"
            android:background="#25000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>



</LinearLayout>